{
    "manifest_version": 3,
    "name": "Tab Workspace Manager",
    "version": "1.0",
    "description": "Manage workspaces of tabs with memory-efficient tab discarding.",
    "permissions": [
        "tabs",
        "tabHide",
        "storage",
        "sidebars"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "custom-action-1": {
            "suggested_key": {
                "default": "Alt+1"
            },
        "description": "something alt 1"
        }
    },
    "host_permissions": ["<all_urls>"]
}
