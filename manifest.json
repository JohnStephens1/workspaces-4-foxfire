{
    "manifest_version": 3,
    "name": "Tab Workspace Manager",
    "version": "1.0",
    "description": "Manage workspaces of tabs with memory-efficient tab discarding.",
    "permissions": [
        "tabs",
        "tabGroups",
        "tabHide",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "1": {
            "suggested_key": {
                "default": "Alt+1"
            },
            "description": "something"
        },
        "2": {
            "suggested_key": {
                "default": "Alt+2"
            },
            "description": "something"
        },
        "show-all-tabs": {
            "suggested_key": {
                "default": "ctrl+shift+h"
            },
            "description": "something"
        }
    },
    "host_permissions": ["<all_urls>"]
}
