{
    "manifest_version": 2,
    "name": "Workspaces 4 Foxfire",
    "version": "1.2.2",
    "description": "Functional workspaces in Firefox, can you believe it",
    "permissions": [
        "tabs",
        "tabHide",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "1": {
            "suggested_key": {
                "default": "Alt+1"
            },
            "description": "shortcut for workspace 1"
        },
        "2": {
            "suggested_key": {
                "default": "Alt+2"
            },
            "description": "shortcut for workspace 2"
        },
        "3": {
            "suggested_key": {
                "default": "Alt+3"
            },
            "description": "shortcut for workspace 3"
        },
        "4": {
            "suggested_key": {
                "default": "Alt+4"
            },
            "description": "shortcut for workspace 4"
        },
        "5": {
            "suggested_key": {
                "default": "Alt+5"
            },
            "description": "shortcut for workspace 5"
        },
        "6": {
            "suggested_key": {
                "default": "Alt+6"
            },
            "description": "shortcut for workspace 6"
        },
        "7": {
            "suggested_key": {
                "default": "Alt+7"
            },
            "description": "shortcut for workspace 7"
        },
        "8": {
            "suggested_key": {
                "default": "Alt+8"
            },
            "description": "shortcut for workspace 8"
        },
        "9": {
            "suggested_key": {
                "default": "Alt+9"
            },
            "description": "shortcut for workspace 9"
        },
        "show-all-tabs": {
            "suggested_key": {
                "default": "Alt+G"
            },
            "description": "merge all workspaces in current window"
        }
    },
    "applications": {
        "gecko": {
            "id": "ima-potato@isamail.com"
        }
    },
    "icons": {
        "48": "icons/le_face_48.png",
        "96": "icons/le_face_96.png"
    },
    "browser_action": {
      "default_icon": "icons/le_face_48.png",
      "default_title": "workspaces-4-foxfire"
    }
}
